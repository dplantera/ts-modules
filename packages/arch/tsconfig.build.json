{
  "extends": "./node_modules/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true
  },
  "include": [
    "index.ts", "src"
  ],
  "exclude": [ "node_modules", "src/**/*.test.ts" ]
}