{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": [ "src/**/*.ts" ],
      "dependsOn": ["lint", "test"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": [ "src/**/*.ts" ]
    },
    "test": {
      "inputs": [ "src/**/*.ts" ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}